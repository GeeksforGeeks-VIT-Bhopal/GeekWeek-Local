#include<iostream>
#include<string>
using namespace std;
bool checkMeta(string str1, string str2)
{
    int len1 = str1.length();
    int len2 = str2.length();
    if(len1!=len2)
        return false;
    int prev = -1,current = -1;
    int count = 0;
    for(int i=0;i<len1;i++){
        if(str1[i]!=str2[i]){
            count++;
            if(count>2)
                return false;
            prev = current;
            current = i;
        }
    }
    return (count==2&&str1[prev] == str2[current]&&str1[current]==str2[prev]);// Write your code here.
}

