// program to print pallindrome
#include<iostream>
using namespace std;
int main ()
{
     int m;
     cout <<" enter the row : ";
     cin>> m ;
     
     for(int i=1 ; i<=m;i++)

     {
    
         for(int j=1;j<=m-i; j++)
         { 
           
             cout<<" ";
             
         }

          
         for(int j=i;j>=1; j--)
         { 
         cout<<j;
         }

         
         for(int j=2;j<=i; j++)
         { 
         cout<<j;
         }

     cout<<endl;
     
     }   


    return 0;
    }
